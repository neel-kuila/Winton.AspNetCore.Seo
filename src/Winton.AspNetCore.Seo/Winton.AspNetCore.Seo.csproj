<Project Sdk="Microsoft.NET.Sdk.Web">

  <Target Name="GitVersionConfig" BeforeTargets="Build">
    <Copy SourceFiles="..\..\gitversion.config\GitVersionConfig.yaml" DestinationFolder="..\.." />
  </Target>
  
  <Target Name="Jenkins" Condition="'$(Configuration)' == 'Release'" DependsOnTargets="GitVersionConfig;Pack" />
  
  <PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputType>Library</OutputType>
  </PropertyGroup>
  
  <PropertyGroup>
    <CodeAnalysisAdditionalOptions>/additionalfile:../../stylecop.json</CodeAnalysisAdditionalOptions>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);SA1633;SA1413;SA1309;SA0001;SA1101</NoWarn>
    <PackageId>Winton.AspNetCore.Seo</PackageId>
    <Title>Winton ASP.NET Core SEO Library</Title>
    <Description>ASP.NET Core Library for adding SEO to websites</Description>
    <PackageVersion>$(NuGetVersion)</PackageVersion>
    <Authors>Winton</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Copyright 2017 Winton</Copyright>
    <PackageTags>Winton, ASP.NET, Core, SEO</PackageTags>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <ApplicationIcon />
    <OutputTypeEx>library</OutputTypeEx>
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\..\stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Views\Shared\Components\OgMetadata\Default.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bt.Tooling.ReSharper" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="Flurl" Version="2.3.0" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0011" PrivateAssets="All" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Xml" Version="1.1.3" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="1.1.1" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta001" PrivateAssets="All" />
    <PackageReference Include="System.Runtime.Serialization.Xml" Version="4.3.0" />
  </ItemGroup>

</Project>