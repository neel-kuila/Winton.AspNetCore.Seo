<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <Authors>Winton</Authors>
    <Company>Winton</Company>
    <Copyright>Copyright 2017 Winton</Copyright>
    <Description>ASP.NET Core Library for adding SEO metadata to websites</Description>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GetVersion>False</GetVersion>
    <NoWarn>$(NoWarn);SA1101;SA1309;SA1413</NoWarn>
    <PackageId>Winton.AspNetCore.Seo</PackageId>
    <PackageIconUrl>https://raw.githubusercontent.com/wintoncode/Winton.AspNetCore.Seo/master/icon.jpg</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/wintoncode/Winton.AspNetCore.Seo/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/wintoncode/Winton.AspNetCore.Seo</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <PackageTags>Winton, ASP.NET, Core, SEO, Search, Engine, Optimization</PackageTags>
    <PackageVersion>$(NuGetVersion)</PackageVersion>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/wintoncode/Winton.AspNetCore.Seo</RepositoryUrl>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Title>Winton ASP.NET Core SEO Library</Title>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <WriteVersionInfoToBuildLog>False</WriteVersionInfoToBuildLog>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <AdditionalFiles Include="../../stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Views\Shared\Components\HeaderMetadata\Default.cshtml" />
    <EmbeddedResource Include="Views\Shared\Components\HeaderMetadata\Default.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Flurl" Version="2.5.0" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0011" PrivateAssets="All" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="1.1.4" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Xml" Version="1.1.4" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor" Version="1.1.4" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="1.1.1" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" PrivateAssets="All" />
  </ItemGroup>

</Project>