<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <Authors>Winton</Authors>
    <Copyright>Copyright 2017 Winton</Copyright>
    <Description>ASP.NET Core Library for adding SEO to websites</Description>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);SA1101;SA1309;SA1413;SA1633;SA1652</NoWarn>
    <PackageId>Winton.AspNetCore.Seo</PackageId>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <PackageTags>Winton, ASP.NET, Core, SEO</PackageTags>
    <PackageVersion>$(NuGetVersion)</PackageVersion>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://stash/scm/techbus/winton.aspnetcore.seo.git</RepositoryUrl>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Title>Winton ASP.NET Core SEO Library</Title>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Remove="Views\Shared\Components\HeaderMetadata\Default.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="../../stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Views\Shared\Components\HeaderMetadata\Default.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bt.Tooling.ReSharper" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="Flurl" Version="2.3.0" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0011" PrivateAssets="All" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Xml" Version="1.1.3" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="1.1.1" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" PrivateAssets="All" />
    <PackageReference Include="System.Runtime.Serialization.Xml" Version="4.3.0" />
  </ItemGroup>

  <Target Name="GitVersionConfig" BeforeTargets="WriteVersionInfoToBuildLog">
    <Copy SourceFiles="..\..\gitversion.config\GitVersionConfig.yaml" DestinationFolder="..\.." />
  </Target>

</Project>